<div class="container margenes">
    {{!--inicio fila 1--}}
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{persona}} ! <a href="" class="btn btn-danger">Cerrar sesion<i
                        class="fa-solid fa-right-from-bracket"></i></a></p>
        </div>
    </div>
    {{!--fin fila 1--}}
    {{!--Inicio fila 2--}}
    <div class="row">
        <div class="col-7">
            <h2>Listado de Noticias</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/noticias/agregar" class="btn btn-success"><i class="fa-solid fa-plus"></i>Nuevo</a>
        </div>
    </div>
    {{!--Fin fila 2--}}
    {{!--Inicio fila 3--}}

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-secondary">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Subtitulo</th>
                        <th scope="col">Link</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each noticias}}
                    <tr>
                        <th scope="row">{{id}}</th> {{!--nombre de la columna tabla--}}
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td>{{link}}</td>
                        <td class="text-end">
                            <a href="" class="btn btn-secondary"><i class="fa-solid fa-pencil"></i></a>
                            <a href="" class="btn btn-secondary"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!--Fin fila 3--}}
</div>